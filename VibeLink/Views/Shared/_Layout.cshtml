<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/site.css" />
    <style>
        body {
            text-align:center;
            font-family: 'Roboto', sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        header {
            background: linear-gradient(135deg, #9b59b6, #ff69b4);
            color: white;
            padding: 15px 0;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .nav-link {
            color: white !important;
            font-weight: bold;
            padding: 10px 15px;
        }

            .nav-link:hover {
                color: #f8f9fa !important;
                background-color: #f1c4e5;
                border-radius: 20px;
            }

        footer {
            background-color: #2c2f33;
            color: white;
            padding: 20px 0;
            text-align: center;
            box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.1);
        }

            footer a {
                color: #ff69b4;
                text-decoration: none;
            }

                footer a:hover {
                    color: #9b59b6;
                    text-decoration: underline;
                }

        .center {
            width: 100%; 
            padding: 20px;
        }

    </style>
</head>
<header>
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center">
            <h1>VibeLink</h1>
            <nav>
                <ul class="nav">
                    <li class="nav-item"><a class="nav-link" href="/">Ana Sayfa</a></li>
                  
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("About","Home")">Hakkımızda</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("sss","Home")">SSS</a></li>
                    <li>
                        @if (User.Identity.IsAuthenticated)
                        {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Activ", "Home")">Etkinlikler</a></li>
                        }
                        else
                        {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Home")">Giriş Yap</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Register", "Home")">Kayıt Ol</a></li>
                        } 
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</header>
<body>
    <div class="container-fluid">
        <div class="center">
            @RenderBody() 
        </div>
    </div>
</body>
<footer>
    <p>&copy; 2024 VibeLink | <a href="@Url.Action("Privacy","Home")">Gizlilik Sözleşmesi</a></p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</html>
