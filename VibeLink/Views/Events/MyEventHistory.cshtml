@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewBag.Title = "Etkinlik Geçmişi";
}

<style>
    .container {
        max-width: 1200px;
    }

    .summary-panel {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .summary-panel h4 {
            font-size: 1.5em;
            margin-bottom: 20px;
        }
    .social-score h5 {
        font-size: 1.3em;
        margin-bottom: 10px;
    }

    .social-score .progress-bar {
        background-color: #28a745;
    }

    .social-graph {
        margin-top: 20px;
    }

    .card {
        border: none;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

    .card-img-top {
        border-radius: 8px;
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.5em;
        font-weight: bold;
    }

    .card-text {
        font-size: 1.1em;
        color: #555;
    }

        .card-text.text-muted {
            font-size: 0.9em;
        }

    .progress {
        height: 15px;
        border-radius: 8px;
    }

    .btn-warning {
        background-color: #f0ad4e;
        border-color: #f0ad4e;
    }

        .btn-warning:hover {
            background-color: #ec971f;
            border-color: #ec971f;
        }
    

    .card-img-top {
        height: 150px;
    }

    }
</style>


<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-md-4">
            <div class="summary-panel shadow-lg p-4 rounded">
                <h4>Geçmiş Etkinlikler Özeti</h4>
                <hr />

                <div class="social-score mb-4">
                    <h5>Sosyallik Puanı</h5>
                    <div class="d-flex align-items-center">
                        <span class="h2" id="socialScore">320</span>
                        <div class="progress ml-3" style="width: 200px;">
                            <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="320" aria-valuemin="0" aria-valuemax="400"></div>
                        </div>
                    </div>
                    <p>Son 6 ayda kazandığınız puanlar.</p>
                </div>

                <div class="social-graph mb-4">
                    <h5>Etkinlik Katılımı (Son 6 Ay)</h5>
                    <canvas id="socialGraph"></canvas>
                </div>

                <button class="btn btn-secondary w-100">Daha Fazla Detay</button>
            </div>
        </div>

        <div class="col-12 col-md-8">
            <h2 class="text-center mb-4">Geçmiş Etkinlikler</h2>

            <div class="event-section">
                <h4>Katıldığınız Etkinlikler</h4>
                <div class="row">
                    <div class="col-12 col-md-4 mb-4">
                        <div class="card shadow-lg rounded">
                            <img class="card-img-top" src="~/Content/images/event1.jpg" alt="Etkinlik Resmi">
                            <div class="card-body">
                                <h5 class="card-title">Teknoloji Konferansı</h5>
                                <p class="card-text">Teknoloji dünyasında en yeni trendleri keşfedin.</p>
                                <p class="card-text text-muted">Tarih: 15 Mart 2024</p>
                                <p class="card-text">Şehir: İstanbul</p>
                                <a href="#" class="btn btn-primary">Detaylar</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-4 mb-4">
                        <div class="card shadow-lg rounded">
                            <img class="card-img-top" src="~/Content/images/event2.jpg" alt="Etkinlik Resmi">
                            <div class="card-body">
                                <h5 class="card-title">Müzik Festivali</h5>
                                <p class="card-text">Yerli ve yabancı sanatçılarla dolu bir festival.</p>
                                <p class="card-text text-muted">Tarih: 7 Aralık 2024</p>
                                <p class="card-text">Şehir: Ankara</p>
                                <a href="#" class="btn btn-primary">Detaylar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="event-section mt-5">
                <h4>Kaçırdığınız Etkinlikler</h4>
                <div class="row">
                    <div class="col-12 col-md-4 mb-4">
                        <div class="card shadow-lg rounded">
                            <img class="card-img-top" src="~/Content/images/event3.jpg" alt="Etkinlik Resmi">
                            <div class="card-body">
                                <h5 class="card-title">Spor Yarışması</h5>
                                <p class="card-text">Büyük spor etkinliği geçtiğimiz yıl büyük ilgi gördü.</p>
                                <p class="card-text text-muted">Tarih: 20 Kasım 2023</p>
                                <p class="card-text">Şehir: İzmir</p>
                                <a href="#" class="btn btn-warning">Kaçırdım</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-4 mb-4">
                        <div class="card shadow-lg rounded">
                            <img class="card-img-top" src="~/Content/images/event4.jpg" alt="Etkinlik Resmi">
                            <div class="card-body">
                                <h5 class="card-title">Yaz Tatili Etkinliği</h5>
                                <p class="card-text">Yazın keyfini çıkarabileceğiniz etkinlikler.</p>
                                <p class="card-text text-muted">Tarih: 5 Temmuz 2024</p>
                                <p class="card-text">Şehir: Antalya</p>
                                <a href="#" class="btn btn-warning">Kaçırdım</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>