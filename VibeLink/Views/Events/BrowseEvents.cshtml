@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewBag.Title = "Etkinliklere Gözat";
}

<style>
    .container {
        max-width: 1200px;
    }

    .filter-panel {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-top: 20px;
    }

        .filter-panel:hover {
            transform: scale(1.05); 
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

        .filter-panel h4 {
            font-size: 1.5em;
            margin-bottom: 20px;
        }

        .filter-panel .form-group {
            margin-bottom: 15px;
        }

        .filter-panel .form-control {
            border-radius: 5px;
            padding: 10px;
        }

    .card {
        border: none;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

    .card-img-top {
        border-radius: 8px;
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 20px;
        flex-grow: 1;
    }

    .card-title {
        font-size: 1.5em;
        font-weight: bold;
    }

    .card-text {
        font-size: 1.1em;
        color: #555;
    }

        .card-text.text-muted {
            font-size: 0.9em;
        }

    .pagination-container .pagination {
        justify-content: center;
        margin-top: 20px;
    }

        .pagination-container .pagination .page-item.active .page-link {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .pagination-container .pagination .page-item .page-link {
            color: #007bff;
            border: 1px solid #ccc;
        }

        .pagination-container .pagination .page-item:hover .page-link {
            color: #0056b3;
        }

    .row .col-12 {
        margin-bottom: 20px;
    }

    .col-12.col-md-4 {
        display: flex;
        justify-content: center;
    }

    .card {
        width: 100%;
        max-width: 350px;
    }

    .card-body a {
        text-decoration: none;
    }

  
    .discover-header {
        width: 100%;
        text-align: center;
        margin-bottom: 30px;
    }

   
    .col-12.col-md-3 {
        margin-top: 30px;
    }
</style>

<div class="container mt-5">
    <div class="discover-header">
        <h2>Keşfet Etkinlikleri</h2>
    </div>

    <div class="row">
        <!-- Filtrele Paneli -->
        <div class="col-12 col-md-3">
            <div class="filter-panel shadow-lg p-4 rounded">
                <h4>Filtrele</h4>
                <hr />

                <div class="form-group">
                    <label for="EventType">Etkinlik Tipi</label>
                    <select class="form-control" id="EventType" name="EventType">
                        <option value="upcoming">Yaklaşan Etkinlikler</option>
                        <option value="past">Geçmiş Etkinlikler</option>
                        <option value="ongoing">Devam Eden Etkinlikler</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="EventCity">Şehir</label>
                    <select class="form-control" id="EventCity" name="EventCity">
                        <option value="">Tüm Şehirler</option>
                        <option value="Istanbul">İstanbul</option>
                        <option value="Ankara">Ankara</option>
                        <option value="Izmir">İzmir</option>
                        <option value="Bursa">Bursa</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="EventTopic">Konu</label>
                    <select class="form-control" id="EventTopic" name="EventTopic">
                        <option value="">Tüm Konular</option>
                        <option value="Technology">Teknoloji</option>
                        <option value="Music">Müzik</option>
                        <option value="Sports">Spor</option>
                        <option value="Education">Eğitim</option>
                        <option value="Health">Sağlık</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="EventSearch">Ara</label>
                    <input type="text" class="form-control" id="EventSearch" name="EventSearch" placeholder="Etkinlik arayın..." />
                </div>
                <br />
                <button class="btn btn-primary w-100">Filtrele</button>
            </div>
        </div>

        <!-- Etkinlik Kartları -->
        <div class="col-12 col-md-9">
            <div id="event-cards" class="row">
                <div class="col-12 col-md-4 mb-4">
                    <div class="card shadow-lg rounded">
                        <img class="card-img-top" src="~/Content/images/event1.jpg" alt="Etkinlik Resmi">
                        <div class="card-body">
                            <h5 class="card-title">Teknoloji Konferansı</h5>
                            <p class="card-text">Teknoloji dünyasında en yeni trendleri keşfedin.</p>
                            <p class="card-text text-muted">Tarih: 15 Mart 2024</p>
                            <p class="card-text">Şehir: İstanbul</p>
                            <a href="#" class="btn btn-primary">Detaylar</a>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-4 mb-4">
                    <div class="card shadow-lg rounded">
                        <img class="card-img-top" src="~/Content/images/event2.jpg" alt="Etkinlik Resmi">
                        <div class="card-body">
                            <h5 class="card-title">Müzik Festivali</h5>
                            <p class="card-text">Yerli ve yabancı sanatçılarla dolu bir festival.</p>
                            <p class="card-text text-muted">Tarih: 7 Aralık 2024</p>
                            <p class="card-text">Şehir: Ankara</p>
                            <a href="#" class="btn btn-primary">Detaylar</a>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-4 mb-4">
                    <div class="card shadow-lg rounded">
                        <img class="card-img-top" src="~/Content/images/event3.jpg" alt="Etkinlik Resmi">
                        <div class="card-body">
                            <h5 class="card-title">Spor Yarışması</h5>
                            <p class="card-text">Büyük spor etkinliği geçtiğimiz yıl büyük ilgi gördü.</p>
                            <p class="card-text text-muted">Tarih: 20 Kasım 2023</p>
                            <p class="card-text">Şehir: İzmir</p>
                            <a href="#" class="btn btn-primary">Detaylar</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="pagination-container text-center mt-5">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">«</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">»</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
