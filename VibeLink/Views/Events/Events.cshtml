@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewBag.Title = "Etkinlikler";
}

<style>
    /* Etkinlikler sayfası genel stilleri */
    .filter-container {
        padding: 20px;
        background-color: #f4f4f4;
    }

    .filters {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        flex-wrap: wrap;
    }

    .filter-input {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        width: 150px;
    }

    .filter-btn {
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .events-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-top: 20px;
    }

    .event-card {
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .event-card:hover {
            transform: scale(1.05);
        }

    .event-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .event-info {
        padding: 20px;
    }

    .event-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .event-date,
    .event-city,
    .event-topic {
        font-size: 1rem;
        color: #555;
    }

    .event-description {
        font-size: 0.9rem;
        color: #777;
        margin-top: 10px;
    }

    .event-actions {
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        color: white;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-secondary {
        background-color: #28a745;
    }
</style>

<div class="filter-container">
    <h1>Etkinlikler</h1>
    <div class="filters">
        <input type="date" placeholder="Tarih" class="filter-input" />
        <input type="text" placeholder="Şehir" class="filter-input" />
        <select class="filter-input">
            <option value="">Gün</option>
            <option value="Monday">Pazartesi</option>
            <option value="Tuesday">Salı</option>
            <option value="Wednesday">Çarşamba</option>
            <option value="Thursday">Perşembe</option>
            <option value="Friday">Cuma</option>
            <option value="Saturday">Cumartesi</option>
            <option value="Sunday">Pazar</option>
        </select>
        <select class="filter-input">
            <option value="">Konular</option>
            <option value="Sports">Spor</option>
            <option value="Music">Müzik</option>
            <option value="Technology">Teknoloji</option>
            <option value="Art">Sanat</option>
        </select>
        <button class="filter-btn">Filtrele</button>
    </div>
</div>
<div class="events-container">
    <div class="event-card">
        <img src="event-image.jpg" alt="Event Image" class="event-image" />
        <div class="event-info">
            <h3 class="event-title">Etkinlik Adı</h3>
            <p class="event-date">12 Aralık 2024, 18:00</p>
            <p class="event-city">İstanbul</p>
            <p class="event-topic">Müzik</p>
            <p class="event-description">Etkinlik hakkında kısa bir açıklama...</p>
            <div class="event-actions">
                <a href="#" class="btn btn-primary">Detaylar</a>
                <button class="btn btn-secondary">Katıl</button>
            </div>
        </div>
    </div>

    <!-- Diğer Etkinlik Kartları Burada -->
</div>
